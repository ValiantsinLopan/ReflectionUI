<Window x:Class="ReflectionUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReflectionUI"
        mc:Ignorable="d"
        Title="Library Explorer" Height="350" Width="525" Background="#FFB4B4B4">
    <Grid>
        <Button x:Name="button" Content="Choose Folder" HorizontalAlignment="Left" Margin="366,50,0,0" VerticalAlignment="Top" Width="87" FontFamily="Segoe WP">

        </Button>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="20" Margin="50,50,0,0" TextWrapping="Wrap" Text="Directory Path" VerticalAlignment="Top" Width="311" TextChanged="textBox_TextChanged" FontFamily="Segoe WP Light"/>

    </Grid>
</Window>
